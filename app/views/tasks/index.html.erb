<h2>All Tasks</h2>

<%= link_to 'New Task', new_task_path %>
  <table>
    <tr>
      <th>Content</th>
    </tr>
    
    <% @task.each do |task| %>
      <tr>
        <td> <%= task.content %> </td>
        <td><%= link_to 'Show',task_path(task) %></td> 
        <td> - </td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td> - </td>
        <td><%= link_to 'Delete', task_path(task), method: :delete, data: {confirm: "Are you sure you want to delete - #{task.content} task"} %></td>
      </tr>
    <% end %>
  </table>